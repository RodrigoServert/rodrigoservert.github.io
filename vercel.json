{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/static" },
    { "src": "*.css", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/scrape-news", "dest": "/api/scrape-news.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
}