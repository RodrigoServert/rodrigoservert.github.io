{
  "version": 2,
  "builds": [
    { 
      "src": "api/**/*.js", 
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/scrape-news",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "api/scrape-news.js"
    }
  ],
  "github": {
    "silent": false
  }
}